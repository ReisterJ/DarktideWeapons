<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Artemia Mk III Purgation Flamer -->
  <ThingDef  ParentName="BaseBullet">
    <defName>DW_FireCloud</defName>
    <label>Fire</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>DarktideWeapons.DW_FireCloud</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <armorPenetrationBase>0.60</armorPenetrationBase>
      <stoppingPower>2</stoppingPower>
      <speed>40</speed>
    </projectile>
    <modExtensions>
      <li Class="DarktideWeapons.ModExtension_ProjectileProperties">
        <penetrationPower>999</penetrationPower>
        <effectiveRange>24.9</effectiveRange>
        <penetrateWall>false</penetrateWall>
        <friendlyFire>false</friendlyFire>
        <critArmorPenetrationMultiplier>2.5</critArmorPenetrationMultiplier>
        <critChance>0.15</critChance>
        <critDamageMultiplier>5.0</critDamageMultiplier>
        <applyHediffDefs>
          <li>DW_Hediff_DOT_AttachFire</li>
        </applyHediffDefs>
      </li>
    </modExtensions>
  </ThingDef>
  <ThingDef ParentName="Darktide_Gun">
    <defName>DW_Flamer_III</defName>
    <label>Artemia Mk III Purgation Flamer</label>
    <description>Hailing from the same forge world as the mighty Hellhound flame tank, this weapon uses volatile promethium to scour heretics with fire.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Minigun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>6.5</Mass>
      <AccuracyTouch>0.20</AccuracyTouch>
      <AccuracyShort>0.20</AccuracyShort>
      <AccuracyMedium>0.15</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>3.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>100</Steel>
      <Plasteel>150</Plasteel>
      <Uranium>20</Uranium>
      <ComponentIndustrial>15</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DW_FireCloud</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>22.9</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <soundCast>Shot_Autocannon</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>18</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <!-- Thunder Hammer -->
  <ThingDef ParentName="Darktide_MeleeWeapon_Quality">
    <defName>DW_Thunder_Hammer_II</defName>
    <label>Crucis Mk II Thunder Hammer</label>
    <techLevel>Spacer</techLevel>
    <description>Power weapons of ancient design, Thunder Hammers are devastating, bone-shattering close combat weapons, though heavy and unwieldy.</description>
    <graphicData>
      <!-- <texPath>Things/Weapon/Melee/Thunderhammer</texPath> -->
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.1</uiIconScale>
    <statBases>
      <WorkToMake>38000</WorkToMake>
      <MarketValue>3000</MarketValue>
      <Mass>5.0</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <burnableByRecipe>false</burnableByRecipe>
    <tools>
      <li>
        <label>Hammer</label>
        <capacities>
          <li>DW_Melee_Strikedown</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2.0</cooldownTime>
        <armorPenetration>0.25</armorPenetration>
        <chanceFactor>0.8</chanceFactor>
      </li>
    </tools>
    <costList>
        <Steel>20</Steel>
        <Plasteel>250</Plasteel>
        <Uranium>200</Uranium>
        <ComponentIndustrial>8</ComponentIndustrial>
        <ComponentSpacer>20</ComponentSpacer>
    </costList>
    <comps>
      <li Class="DarktideWeapons.CompProperties_EquippableAbilities">
        <abilityDefList>
          <li>DW_Ability_ChargeWeapon_ThunderHammer</li>
        </abilityDefList>
      </li>
      <li Class="DarktideWeapons.CompProperties_DWChargeWeapon">
        <ChargeMax>1</ChargeMax>
        <weaponChargeLastingTicks>1800</weaponChargeLastingTicks>
        <weaponChargeDamageFactor>8.0</weaponChargeDamageFactor>
        <weaponChargeArmorPenetrationFactor>3.0</weaponChargeArmorPenetrationFactor>
        <cleaveNum>1</cleaveNum>
      </li>
      <li Class="DarktideWeapons.CompProperties_Block">
        <isShield>false</isShield>
        <maxStamina>80</maxStamina>
        <allowBlock>true</allowBlock>
        <allowAttackWhileBlocking>false</allowAttackWhileBlocking>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>ChargedShot</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
        <skillRequirements>
          <Crafting>12</Crafting>
        </skillRequirements>
        <displayPriority>400</displayPriority>
      </recipeMaker>
  </ThingDef>

