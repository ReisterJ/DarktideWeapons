  <ThingDef ParentName="Darktide_Gun">
    <defName>DW_ExterminatorShotgun_III</defName>
    <label>Exaction Mk III Exterminator Shotgun</label>
    <description>This shotgun's wide horizontal pellet spread is tailored to wipe out entire crowds of heretics. If the target is particularly tough, the electric shells will ensure that they cannot resist.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>2.5</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
    </statBases>
    <modExtensions>
      <li Class="DarktideWeapons.ModExtension_ShotgunProperties">
        <projectileNum>9</projectileNum>
        <spreadAngleMax>15</spreadAngleMax>
        <spreadAngleMin>1</spreadAngleMin>
      </li>
    </modExtensions>
    <costList>
      <Steel>80</Steel>
      <Plasteel>180</Plasteel>
      <ComponentIndustrial>15</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>DarktideWeapons.Verb_DW_ShotgunShoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DW_Bullet_ExterminatorShotgun_III</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>30.9</range>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="DarktideWeapons.CompProperties_EquippableAbilities">
        <abilityDefList>
          <li>DW_Ability_LaunchElectronicStunShell</li>
        </abilityDefList>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Art">
          <nameMaker>NamerArtWeaponGun</nameMaker>
          <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
          <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>
